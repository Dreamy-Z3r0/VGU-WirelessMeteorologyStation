ADC_HandleTypeDef hadc1;

uint16_t raw[50];
uint8_t arr_index = 0;
bool output_ready = false;

unsigned long t1, t2;

void setup() {
  Serial.begin(9600);

  MX_ADC1_Init();
  HAL_ADCEx_Calibration_Start(&hadc1);
}

void loop() {
  t1 = micros();
  HAL_ADC_Start_IT(&hadc1);

  while(!output_ready);
  output_ready = false;

  Serial.print("ADC readout: ");

  for (uint8_t i = 0; i < 50; i += 1) {
    if (0 == i%10) Serial.printf("\n");
    Serial.printf(" %d", raw[i]);
  }

  Serial.printf("\nRead time: %d us\n\n", t2 - t1);

//  Serial.printf("ADC readout: %d\n", raw);
//  Serial.printf("V = %.2f V\n\n", 3.3*raw/4095);
  
  HAL_Delay(1000);
}

