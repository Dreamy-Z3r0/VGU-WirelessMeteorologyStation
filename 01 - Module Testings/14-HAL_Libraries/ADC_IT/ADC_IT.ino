void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef* hadc) {
  raw[arr_index] = HAL_ADC_GetValue(&hadc1);

  arr_index += 1;
  if (50 == arr_index) {
    t2 = micros();
    output_ready = true;
    arr_index = 0;
  }
  else {
    HAL_ADC_Start_IT(&hadc1);
  }
